    <!-- Js Start -->
    <script>
        function editSubadmin(data) {
            console.log(data);
            $.ajax({
                url: "/editSubadmin",
                data: { id: data },
                type: "GET",
                contentType: "application/json",
                dataType: "json",
                success: function (response) {
                    console.log(response.editDetails)
                    $("#editId").val(response.editDetails._id);
                    $("#username").val(response.editDetails.username);
                    $("#email").val(response.editDetails.email);
                    $("#number").val(response.editDetails.phoneNumber);
                    $("#picture").val(response.editDetails.profileImage);
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    $("#editId").val(" ");
                    $("#username").val(" ");
                    $("#email").val(" ");
                    $("#number").val(" ");
                    $("#picture").val(" ");
                }
            });
        }
    </script>
