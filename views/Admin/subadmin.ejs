                                            <% getUser.forEach(function(value) { %>
                                                <tr>
                                                    <td>
                                                        <%=value.username %>
                                                    </td>
                                                    <td>
                                                        <%=value.email %>
                                                    </td>
                                                    <td>
                                                        <%=value.phoneNumber %>
                                                    </td>
                                                    <td><a href="permission<%=value._id%>" class="btn btn-warning"
                                                            title="Manage Permission"><i class="fa fa-lock"></i></a>
                                                    </td>
                                                    <td>
                                                        <button type="button"
                                                            class="btn btn-outline-primary waves-effect waves-light"
                                                            data-toggle="modal" data-target="#editModel"
                                                            onclick="editSubadmin('<%=value._id%>')">Edit</button>
